<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OpenCharade.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OpenCharade"
    xmlns:pages="clr-namespace:OpenCharade.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar >
        <Tab Title="My Decks">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        </Tab>
        <Tab Title="Settings" >
            <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="SettingsPage" />
        </Tab>
        
    </TabBar>


</Shell>
